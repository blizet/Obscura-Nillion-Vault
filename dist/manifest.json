{
  "manifest_version": 3,
  "name": "Nillion Vault",
  "version": "2.0.0",
  "description": "Advanced decentralized identity and private data management powered by Nillion SecretVaults",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "alarms",
    "notifications",
    "identity",
    "unlimitedStorage",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Nillion Vault",
      "default_icon": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "icons": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["popup.html", "welcome.html", "welcome.js", "nillion-api.js", "assets/*", "icons/*"],
        "matches": ["<all_urls>"]
      }
    ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
